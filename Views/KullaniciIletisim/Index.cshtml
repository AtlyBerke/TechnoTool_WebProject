
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_KullaniciLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Shoppers &mdash; Colorlib e-Commerce Template</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Mukta:300,400,700">
    <link rel="stylesheet" href="fonts/icomoon/style.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/magnific-popup.css">
    <link rel="stylesheet" href="css/jquery-ui.css">
    <link rel="stylesheet" href="css/owl.carousel.min.css">
    <link rel="stylesheet" href="css/owl.theme.default.min.css">

    <link rel="stylesheet" href="css/aos.css">
    <link rel="stylesheet" href="css/style.css">

</head>
<body>

    <div class="site-wrap">
     
        <div class="site-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="h3 mb-3 text-black">Teknik-Destek</h2>
                    </div>
                    <div class="col-md-7">
                      @using (Html.BeginForm("MesajGonder","KullaniciIletisim",FormMethod.Post)) { 

                        <div class="p-3 p-lg-5 border">

                            <div class="form-group row">

                            </div>
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <label for="c_subject" class="text-black">Konu </label>
                                    <input type="text" class="form-control" id="c_subject" name="konu">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <label for="c_message" class="text-black">Message </label>
                                    <textarea name="icerik" id="c_message" cols="30" rows="7" class="form-control"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-12">
                                    <input type="submit" class="btn btn-primary btn-lg btn-block" value="Mesaj Gönder">
                                </div>
                            </div>

                            <div class="p-4 border mb-3">
                                <span class="d-block text-primary h6 text-uppercase">Gönderdiğin Mesajlar</span>
                                <a href="/KullaniciIletisim/GonderilenMesajlar/" class="btn btn-primary" style="width:150px;">+</a>
                            </div>

                            <div class="p-4 border mb-3">
                                <span class="d-block text-primary h6 text-uppercase">Gelen Mesajlar</span>
                                <a href="/KullaniciIletisim/GelenMesajlar/" class="btn btn-primary" style="width:150px;">+</a>
                            </div>

                        </div>
                        }
                    </div>
                    <div class="col-md-5 ml-auto">
                        <div class="p-4 border mb-3">
                            <span class="d-block text-primary h6 text-uppercase">İstanbul</span>
                            <p class="mb-0">Halide Edip Adıvar Mahallesi – Darülaceze Caddesi No:3A BOMONTİ / ŞİŞLİ – İSTANBUL</p>
                        </div>
                        <div class="p-4 border mb-3">
                            <span class="d-block text-primary h6 text-uppercase">Sakarya</span>
                            <p class="mb-0">ATATÜRK BULVARI / ADAPAZARI-SAKARYA</p>
                        </div>
                        <div class="p-4 border mb-3">
                            <span class="d-block text-primary h6 text-uppercase">Elazığ</span>
                            <p class="mb-0">HÜRRİYET ECZANESİ. Doğukent mah. Ahmet Yesevi Cad. No:55/C</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/jquery-ui.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/jquery.magnific-popup.min.js"></script>
    <script src="js/aos.js"></script>
    <script src="js/main.js"></script>

</body>
</html>

