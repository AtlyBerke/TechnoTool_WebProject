@model IEnumerable<MVC5_OnlineTicariOtomasyon.Models.Siniflar.SinifGrup2>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Marka Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>MARKA</th>
                    <th>Bar</th>
                    <th style="width: 40px">Adet</th>
                </tr>
            </thead>
            @{ int sirano = 0;}
            @foreach (var x in Model)
            {
                <tbody>
                    <tr>
                        <td>@{sirano++;} @sirano</td>
                        <td>@x.Markaİsim</td>
                        <td>
                            @if (x.Sayi == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 10%"></div>
                                </div>
                            }
                            @if (x.Sayi == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 20%"></div>
                                </div>
                            }
                            @if (x.Sayi >= 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 30%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (x.Sayi == 1)
                            {
                                <span class="badge bg-primary">@x.Sayi</span>
                            }

                            @if (x.Sayi == 2)
                            {
                                <span class="badge bg-warning">@x.Sayi</span>
                            }

                            @if (x.Sayi >= 3)
                            {
                                <span class="badge bg-success">@x.Sayi</span>
                            }
                        </td>
                    </tr>

                </tbody>
            }
        </table>
    </div>
    <!-- /.card-body -->
</div>
