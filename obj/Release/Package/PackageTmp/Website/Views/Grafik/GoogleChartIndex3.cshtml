
@{
    ViewBag.Title = "GoogleChartIndex3";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<br />
<h2>LİNE ÜRÜN-STOK GRAFİĞİ </h2>
<br />
<html lang="en">

<head>

    <title>Result Visualization</title>

    <script type="text/javascript" src="https://www.google.com/jsapi"></script>

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

    <script>

        $(document).ready(function () {

            $.ajax({

                type: "POST",

                dataType: "json",

                contentType: "application/json",
                url: '@Url.Action("GoogleCharts3", "Grafik")',

                success: function (result) {

                    google.charts.load('current', {

                        'packages': ['corechart']

                    });

                    google.charts.setOnLoadCallback(function () {

                        drawChart(result);

                    });

                }

            });

        });



        function drawChart(result) {

            var data = new google.visualization.DataTable();

            data.addColumn('string', 'Name');

            data.addColumn('number', 'Stok Sayısı');

            var dataArray = [];



            $.each(result, function (i, obj) {

                dataArray.push([obj.UrnAd, obj.Stk]);

            });

            data.addRows(dataArray);



            var columnChartOptions = {

                title: "Ürün-Stok Grafiği",

                width: 1200,

                height: 1000,

                bar: { groupWidth: "20%" },

            };



            var columnChart = new google.visualization.LineChart(document

                .getElementById('Linechart_div'));



            columnChart.draw(data, columnChartOptions);

        }

    </script>

</head>

<body>

    <div id="Linechart_div"></div>



</body>

</html>


