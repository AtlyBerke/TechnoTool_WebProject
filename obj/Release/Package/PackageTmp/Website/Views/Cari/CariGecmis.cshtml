@using MVC5_OnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>

@{
    ViewBag.Title = "CariGecmis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Cari Geçmis</h2>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">@ViewBag.dgr</li>
</ol>

<table class="table table-bordered">
    <tr>
        <th>SATIŞ ID</th>
        <th>ÜRÜN</th>
        <th>ADET</th>
        <th>FİYAT</th>
        <th>TOPLAM TUTAR</th>
        <th>TARİH</th>
        <th>#</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.SatisID</td>
            <td>@x.Urun.UrunAdı</td>
            <td>@x.Adet</td>
            <td>@x.Fiyat</td>
            <td>@x.ToplamTutar</td>
            <td>@x.Tarih.ToString("dd.MM.yyyy")</td>
            <td><a href="#" class="btn btn-info">YAZDIR</a></td>

        </tr>
    }

    

</table>

