@using TechnoTool_WebApp.Models.Siniflar
@model List<Mesajlar>

@{
    ViewBag.Title = "GelenMesajlar";
    Layout = "~/Views/Shared/_KullaniciLayout.cshtml";
}

<h2>Gelen Mesajlar</h2>
<div class="card mb-4">
    <div class="card-header"><i class="fas fa-table mr-1"></i>DataTable Example</div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>GÖNDEREN</th>
                        <th>KONU</th>
                        <th>İÇERİK</th>
                        <th>TARİH</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>

                        <th>GÖNDEREN</th>
                        <th>KONU</th>
                        <th>İÇERİK</th>
                        <th>TARİH</th>
                        <th>#</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.gonderici</td>
                            <td>@x.konu</td>
                            <td>@x.icerik</td>
                            <td>@x.tarih.ToShortDateString()</td>
                            <td><a href="/KullaniciIletisim/MesajDetay/@x.mesajid" class="btn btn-secondary">Detay</a></td>
                        </tr>
                    }

                </tbody>

            </table>
            <br />
        </div>
        <br />

    </div>


