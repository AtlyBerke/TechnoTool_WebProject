@using TechnoTool_WebApp.Models.Siniflar
@model List<Urunler>

@{
    ViewBag.Title = "UrunDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>UrunDetay</h2>


<table class="table table-bordered">

    <tr>
        <th>GÖRSEL 1</th>
        <th>GÖRSEL 2</th>
        <th>GÖRSEL 3</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td><img src="@x.gorsel1" style="height:250px; width:250px;" /></td>
            <td><img src="@x.gorsel2" style="height:250px; width:250px;" /></td>
            <td><img src="@x.gorsel3" style="height:250px; width:250px;" /></td>
        </tr>
    
    }
</table>

<table class="table table-hover table-dark">

    <tr>
        <th scope="col">AÇIKLAMA</th>
        <th scope="col">ÖZELLİKLER</th>
    </tr>
    @foreach (var y in Model)
    {
        <tr>
            <td>@y.UrunAciklama</td>
            <td>@y.UrunOzellikler</td>
        </tr>
    }
</table>
