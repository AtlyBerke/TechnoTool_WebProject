@model TechnoTool_WebApp.Models.Siniflar.Mesajlar
@{
    ViewBag.Title = "CevapMesaj";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Cevap Mesajı</h2>
@using (Html.BeginForm("CevapMesaj", "AdminMesaj", FormMethod.Post))
{

    @Html.Label("KONU")
    @Html.TextBoxFor(x => x.konu, new { @class = "form-control" })
    <br />
    @Html.Label("İÇERİK")
    @Html.TextAreaFor(x => x.icerik, new { @class = "form-control", rows = 6, cols = 40 })
    <br />
    <button class="btn btn-primary">EKLE</button>
}
