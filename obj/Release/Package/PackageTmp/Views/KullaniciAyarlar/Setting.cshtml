@model TechnoTool_WebApp.Models.Siniflar.Kullanici

<div class="card mb-4">
    <h5 class="card-header">Profile Details</h5>
    <hr class="my-0" />
    <div class="card-body">
        @using (Html.BeginForm("UpdateProfile", "KullaniciAyarlar", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.Kullanicid)
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="firstName" class="form-label">Kullanıcı Adı</label>
                    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
                    
                </div>

                <div class="mb-3 col-md-6">
                    <label for="lastName" class="form-label">Kullanıcı Soyadı</label>
                    @Html.TextBoxFor(x => x.KullaniciSoyadi, new { @class = "form-control" })
                   
                </div>

                <div class="mb-3 col-md-6">
                    <label for="email" class="form-label">E-mail</label>
                    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                 
                </div>
                <div class="mb-3 col-md-6">
                    <label for="organization" class="form-label">Şifre</label>
                    @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", type = "password" })
                   
                </div>
                <div class="mb-3 col-md-6">
                    <label class="form-label" for="phoneNumber">Phone Number</label>
                    <div class="input-group input-group-merge">
                        @Html.TextBoxFor(x => x.telefon, new { @class = "form-control" })
                   
                    </div>
                </div>

            </div>
            <div class="mt-2">
                <button type="submit" class="btn btn-primary me-2">Değişiklikleri Kaydet</button>
               <a href="/LogOut/LogOut" class="btn btn-primary" style="margin-left:5px;">Çıkış Yap</a>
            </div>

        }


    </div>
    </div>