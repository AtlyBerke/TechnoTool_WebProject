@using MVC5_OnlineTicariOtomasyon.Models.Siniflar
@model List<Urun>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>ÜRÜN LİSTESİ</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYATI</th>
        <th>SATIŞ FİYATI</th>
        <th>KATEGORİ</th>
        <th>#</th>
        <th>#</th>
        <th>#</th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <td>@x.UrunID</td>
        <td>@x.UrunAdı</td>
        <td>@x.Marka</td>
        <td>@x.Stok</td>
        <td>@x.AlisFiyat</td>
        <td>@x.SatisFiyat</td>
        <td>@x.Kategori.KategoriAdı</td>
        <td><a href="/Urun/UrunSil/@x.UrunID" class="btn btn-danger">SİL</a></td>
        <td><a href="/Urun/UrunGetir/@x.UrunID" class="btn btn-info">GÜNCELLE</a></td>
        <td><a href="/Urun/SatisYap/@x.UrunID" class="btn btn-primary">SATIŞ YAP</a></td>
    </tr>
    }
</table>
<a href="/Urun/YeniUrun/" class="btn btn-primary" style="margin-left:10px;">YENİ ÜRÜN</a>

